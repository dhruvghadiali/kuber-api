    "mongoose": "^6.9.1"
  },
  "devDependencies": {
    "colors": "^1.4.0",
    "jest": "^29.5.0",
    "nodemon": "^3.1.10",
    "proxyquire": "^2.1.3",
    "sinon": "^15.0.4",
    "supertest": "^6.3.3"
